{
    "name": "vu/propaganda-analysis",
    "description": "ATSPARA-based propaganda and disinformation analysis system for Lithuanian text using LLM models",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.15",
        "illuminate/redis": "^12.15",
        "guzzlehttp/guzzle": "^7.9",
        "laravel/tinker": "^2.10",
        "predis/predis": "^3.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "laravel/dusk": "^8.3",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "VU Research Team",
            "email": "mif@vu.lt",
            "homepage": "https://mif.vu.lt",
            "role": "Development Team"
        },
        {
            "name": "Paulius Zaranka",
            "email": "paulius.zaranka@mif.vu.lt",
            "role": "Research Methodology"
        }
    ],
    "funding": [
        {
            "type": "other",
            "url": "https://www.atspara.mif.vu.lt/"
        }
    ],
    "keywords": [
        "propaganda",
        "disinformation", 
        "nlp",
        "lithuanian-language",
        "llm",
        "atspara",
        "text-analysis"
    ]
}
